<p id="notice"><%= notice %></p>

<% if current_user.role?(:admin) %>
  <h1>Projects</h1>

  <table>
    <thead>
      <tr>
        <th>Status</th>
        <% @devs.each do |dev| %>
          <th>  <%= dev.name %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @todos.each_pair do |key, columns| %>
      <tr>
        <td> <%= key %> </td>
        <% @devs.collect(&:name).each_with_index do |dev_name, index| %>
          <% print = false %>  
          <% columns.group_by(&:name).each do |dev, todo| %>
            <% if dev == dev_name %>
              <% print = true %>
              <td> <%= todo.collect(&:title).join(",")  if dev ==  dev_name %></td>
            <% end %>  
          <% end %>  
          <% if print == false %>  
            <td></td>
            <% print = false %>  
          <% end %>  
        <% end %>  
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <table>
    <thead>
      <tr>
        <th>Status</th>
        <% @projects.each do |project| %>
          <th>  <%= project.name %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @todos_p.each_pair do |key, columns| %>
      <tr>
        <td> <%= key %> </td>
        <% @projects.collect(&:name).each_with_index do |project_name, index| %>
          <% print = false %>  
          <% columns.group_by(&:name).each do |project, todo| %>
            <% if project == project_name %>
              <% print = true %>
              <td> <%= todo.collect(&:title).join(",")  if project ==  project_name %></td>
            <% end %>  
          <% end %>  
          <% if print == false %>  
            <td></td>
            <% print = false %>  
          <% end %>  
        <% end %>  
      </tr>
      <% end %>
    </tbody>
  </table>

  <!--Div that will hold the pie chart-->
  <%= select_tag "project_id" , options_for_select(@projects.collect{|p| [p.name, p.id]}, selected: params[:project]) %>
  <div id="chart_div"></div>
  <%= link_to 'New Project', new_project_path %>
  <style>
    table, tr {
    border: 1px solid black;
  }
  </style>

  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript">

    // Load the Visualization API and the corechart package.
    google.charts.load('current', {'packages':['corechart']});

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

      // Create the data table.
      var data = new google.visualization.DataTable();
      data.addColumn('string', 'Topping');
      data.addColumn('number', 'Slices');
      data.addRows(<%= raw @graph_data %>);

      // Set chart options
      var options = {'title':'Project wise Pie Chart',
                     'width':400,
                     'height':300};

      // Instantiate and draw our chart, passing in some options.
      var chart = new google.visualization.PieChart(document.getElementById('chart_div'));

      chart.draw(data, options);
    }

    $('#project_id').change(function(){
      window.location.href = window.location.href.split('?')[0] + "?project="+ $(this).val() ;
    });
  </script>
<% else %>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.status %></td>
        <td><%= link_to 'Edit Status', edit_status_project_path(todo.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %> 
